
<view class="wrap">
    <view class="page-title">
      <text class="title">结算</text>
    </view>
    <view class="content">
      <view class="order-list">
        <view class="order-item" wx:for="{{carts}}" wx:key="{{index}}">
          <text class="item-title">{{item.title}}</text>
          <view class="counter-box">
            <text class="unit-price">单价：￥<text class="price">{{item.price}}</text></text>
            <view class="counter">
              <button class="btn add" plain="true" bindtap="addCount" data-index="{{index}}">+</button>
              <text class="counter-num">{{item.num}}</text>
              <block  wx:if="{{minusNum}}">
                <button class="btn minus" plain="true" bindtap="minusCount" data-obj="{{obj}}" data-index="{{index}}">-</button>
              </block>
            </view>
          </view>
        </view>
      </view>
      <view class="pay-count-box">
        <view class="weixin-pay">
          <icon class="zuoxiang icon-weixin"></icon>
          <text>微信支付</text>
        </view>
        <view class="count-box">
          <text>应支付：</text><text class="count-price">￥<text class="count">{{totalPrice}}</text></text>
        </view>
      </view>
      <button type="primary" size="default" bindtap="goOrder">确认支付</button>
    </view>
</view>