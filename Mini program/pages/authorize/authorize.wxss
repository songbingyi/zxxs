/* pages/authorize/authorize.wxss */
.authorize-title{
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f08300;
  color: #fff;
}
.authorize-title .icon-weixin{
  font-size: 130rpx;
}
.authorize-title text{
  font-size: 30rpx;
  line-height: 2em;
}
.des-text{
  padding: 40rpx;
}
.des-text text{
  display: block;
  font-size: 24rpx;
  line-height: 2em;
  color: #9B9B9B;
}
.des-text text.title{
  color: #000;
  font-size: 28rpx;
}
button{
  margin: 0 40rpx;
}
button text{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 10rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  color: #1AAD19;
  vertical-align: text-top;
}
button[disabled][type=primary] text{
  opacity: 0.6;
}